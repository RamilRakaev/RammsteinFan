@page
@model RammsteinFan.Pages.UserPages.Discussions.AddNewSubjectModel
@{
    ViewData["Title"] = "Добавить новую тему для обсуждения";
    ViewData["chapter"] = "Добавить новую тему для обсуждения";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-2">

        </div>
        <div class="col-8">
            <p style="font-size: 20px;">
                Предложите свою тему для обсуждения
            </p><br />
            <form method="post">
                <div class="form-group blockInput">
                    <input type="text" class="textInput" placeholder="Ваше имя">
                </div>
                <div class="form-group blockInput">
                    <input type="text" class="textInput" placeholder="Надтема">
                </div>
                <div class="form-group blockInput">
                    <textarea class="text" rows="2" type="text" placeholder="Тема обсуждения"></textarea>
                </div>
                <div class="form-group blockInput">
                    <textarea class="text" rows="3" type="text" placeholder="Текст"></textarea>
                </div>
                <div class="form-group">
                    <a class="back-btn " type="submit">Назад</a>
                    <button class="inputBtn"  type="submit">Отправить</button>
                </div>
            </form>
        </div>
        <div class="col-2"></div>

    </div>
</div>