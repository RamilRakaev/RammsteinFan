@model RammsteinFan.Infrastructure.Core.DiscussionSubject

<div class="discussion-message subject">
    <a asp-page="/UserPages/Discussions/ConcreteDiscussion" asp-route-id="@Model.Id">
        <h5>@Model.Topic</h5>
    </a>
    <a>
        <h6>@Model.Author, @Model.CreationDate.Date.ToString("D")</h6>
    </a>
    <button class="comment" style="background-image: url(../../img/comment.png);"></button>
    <label>@Model.Comments</label>
    <button class="views" style="background-image: url(../../img/eye.png);"></button>
    <label>@Model.Views</label>
    <button class="likes" style="background-image: url(../../img/fire.png);"></button>
    <label>@Model.Likes</label>
</div>

