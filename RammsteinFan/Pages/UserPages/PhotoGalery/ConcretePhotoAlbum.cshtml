@page
@model RammsteinFan.Pages.UserPages.ConcretePhotoAlbumModel
@{
    ViewData["Title"] = "Фотогалерея";
    ViewData["chapter"] = "Фотогалерея";
}

<div>
    <!-- окно для просмотра картинки -->
    <div id="myModal" class="modal">

        <!-- The Close Button -->
        <span class="close">&times;</span>

        <!-- Modal Content (The Image) -->
        <img class="modal-content" id="img01">

        <!-- Modal Caption (Image Text) -->
        <div id="caption"></div>
    </div>
    <br />
    <h3>@Model.Title</h3>
    @for(int i = 0; ;)
    {
        <div class="rowImg">
            @while(true)
            {
                i++;
                <div class="albumImg ">
                    <img class="myImg" src="~/img/photoGalery/@Model.Title/@(i).jpg">
                </div>
                
                if (i % 4 == 0 || i >= Model.Quantity)
                {
                    break;
                }
                if (i % 4 == 0)
                {
                    break;
                }
            }
        </div>
        if (i >= Model.Quantity)
        {
            break;
        }
    }
</div>
<script src="~/js/concretePhotoAlbum.js"></script>
