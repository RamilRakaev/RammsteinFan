@page
@model RammsteinFan.Pages.UserPages.ConcretePhotoAlbumModel
@{
    ViewData["Title"] = "Фотогалерея";
    ViewData["chapter"] = "Фотогалерея";
}
<link rel="stylesheet" href="~/css/photoGalery/concretePhotoAlbum.css" />
<div>
    <!-- окно для просмотра картинки -->
    <div id="myModal" class="modal">

        <!-- The Close Button -->
        <span class="close">&times;</span>

        <!-- Modal Content (The Image) -->
        <img class="modal-content" id="img01">

        <!-- Modal Caption (Image Text) -->
        <div ><p id="caption"></p></div>
    </div>
    <br />
    <h3>@Model.Title</h3>
    @for(int i = 0; ;)
    {
        <div class="rowImg">
            @while(true)
            {
                
                <div class="albumImg ">
                    <img class="myImg" src="~/img/@(Model.ImagesLocation[i] + "/" + Model.ImagesTitles[i])" 
                         alt="@Model.ImagesTitles[i] <br/>Источник: @Model.ImagesSources[i]">
                </div>
                i++;
                if (i % 4 == 0 || i >= Model.ImagesTitles.Count())
                {
                    break;
                }
            }
        </div>
        if (i >= Model.ImagesTitles.Count())
        {
            break;
        }
    }
</div>
<script src="~/js/concretePhotoAlbum.js"></script>
