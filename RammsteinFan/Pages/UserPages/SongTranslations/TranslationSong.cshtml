@model RammsteinFan.Pages.UserPages.SongTranslations.TranslationSongModel
@{
    ViewData["Title"] = "Переводы";
    ViewData["chapter"] = "Переводы песен";
}
<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-12 mb-4">
            <h3>@Model.Title</h3>
        </div>
        @if (Model.SongTranslation.Count() == 1 & Model.Lyrics.Count() == 1)
        {
            <div class="col-12"><h4>Перевод отсутствует</h4></div>
        }
        else
        {
            @for (int i = 0; i < Model.Lyrics.Count(); i++)
            {
                if (Model.Lyrics[i] == "" & Model.SongTranslation[i] == "")
                {
                    <div class="col-12"><br /></div>
                }
                else
                {
                    <div class="col-5 ml-2">@Model.Lyrics[i]</div>
                    <div class="col-5 ">@Model.SongTranslation[i]</div>
                }
            }
        }
        <div class="col-12">
            <p>@Model.SongDescription</p>
        </div>
    </div>
</div>