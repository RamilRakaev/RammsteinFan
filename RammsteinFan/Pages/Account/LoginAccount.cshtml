@page
@model CookieAuthentication.Pages.Account.LoginAccountModel
@{
    ViewData["Title"] = "Авторизация";
    ViewData["chapter"] = "Авторизация";
}
<div class="container">
    <div class="row justify-content-center">
        <form method="post" class="mt-3" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label>Введите Email</label><br />
                    <div class="blockInput">
                        <input type="text" class="textInput" autocomplete="off" asp-for="@Model.Login.EmailAdress" />
                    </div>
                    <span asp-validation-for="@Model.Login.EmailAdress" />
                </div>
                <div class="form-group">
                    <label>Введите пароль</label><br />
                    <div class="blockInput">
                        <input type="password" class="textInput" asp-for="@Model.Login.Password" autocomplete="off" />
                    </div>
                    <span asp-validation-for="@Model.Login.Password" />
                </div>
                <div>
                    <a class="float-left btn btn-send" asp-page="/Account/RegisterAccount" >Регистрация</a>
                </div>
                <div>
                    <input type="submit" class="float-right btn btn-send" value="Войти" />
                </div>
            </div>
        </form>
    </div>
</div>