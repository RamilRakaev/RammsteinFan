@using RammsteinFan.Pages
@{ }
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="~/css/main/loadingScreen.css" />
    <script src="~/js/main/layout.js"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RammsteinFan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css">

    <link rel="stylesheet" href="~/css/main/index.css">
    <link rel="stylesheet" href="~/css/main/header.css">
    <link rel="stylesheet" href="~/css/main/feedback.css">
    <link rel="stylesheet" href="~/css/main/footer.css">
    <link rel="stylesheet" href="~/css/main/aside.css" />
    <link rel="stylesheet" href="~/css/main/adaptability.css" />

    <link rel="stylesheet" href="~/css/albums/albumMain.css">
    <link rel="stylesheet" href="~/css/albums/audio.css" />
    <link rel="stylesheet" href="~/css/albums/concreteAlbum.css" />
    <link rel="stylesheet" href="~/css/albums/mediaelementplayer.css" />

    <link rel="stylesheet" href="~/css/photoGalery/photoGaleryMain.css" />
    <link rel="stylesheet" href="~/css/videoGalery/videoGaleryMain.css" />

    <link rel="stylesheet" href="~/css/discussions/discuss.css" />
    <link rel="stylesheet" href="~/css/discussions/discussionsMain.css" />
    <link rel="stylesheet" href="~/css/discussions/inputForm.css" />

    <link rel="stylesheet" href="~/css/songTranslations/songTranslationsMain.css" />
</head>
<body onload="onloadBody()">
    <div class="load_box">
        <div class="bar bar1"></div>
        <div class="bar bar2"></div>
        <div class="bar bar3"></div>
        <div class="bar bar4"></div>
        <div class="bar bar5"></div>
        <div class="bar bar6"></div>
    </div>
    <header id="header">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <img class="img-responsive cap" src="~/img/rammstein%20logo%20(5).jpg">
            </div>
            <div class="row justify-content-center" style="background-color: #303030;">
                <nav class="navbar navbar-expand-lg">
                    <ul class="nav">
                        <li class="btn-group">
                            <button style="margin: 0;" class="dropdown-toggle nav-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Главное</button>
                            <div class="dropdown-menu menuButtons">
                                <a class="dropButton" asp-page="/Index">О группе</a>
                                <a class="dropButton" asp-page="/UserPages/Main/History">История</a>
                                <a class="dropButton" asp-page="/UserPages/Main/Members">Участники</a>
                            </div>
                        </li>

                        <li><a style="margin: 0" class="nav-link nav-btn" asp-page="/UserPages/Albums/AlbumsMain">Альбомы</a></li>
                        <li><a style="margin: 0" class="nav-link nav-btn" asp-page="/UserPages/SongTranslations/SongTranslationsMain">Переводы песен</a></li>
                        <li class="btn-group">
                            <button type="button" style="margin: 0;" class="nav-link dropdown-toggle nav-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Галерея</button>
                            <div class="dropdown-menu menuButtons">
                                <a class="dropButton" asp-page="/UserPages/VideoGaleryMain">Видеогалерея</a>
                                <a class="dropButton" asp-page="/UserPages/PhotoGalery/PhotoGaleryMain">Фотогалерея</a>
                            </div>
                        </li>
                        <li><a style="margin: 0" class="nav-link nav-btn" asp-page="/UserPages/Discussions/DiscussionsMain">Обсуждения</a></li>

                        <li>
                            @if (IndexModel.AuthorizedUser)
                            {
                                <a class='nav-link nav-btn' asp-page="/Account/LoginAccount" asp-page-handler="Logout">Выйти</a>
                            }
                            else
                            {
                                <a class='nav-link nav-btn' asp-page="/Account/LoginAccount">Войти</a>
                            }

                        </li>
                        @* Соц. сети *@
                        <li>
                            <a class='nav-link socialNetworks'
                               target="_blank" href='https://www.instagram.com/rammsteinofficial/?hl=ru'><img src='~/img/instagram.png'></a>
                        </li>
                        <li>
                            <a class='nav-link socialNetworks'
                               target="_blank" href='https://www.facebook.com/Rammstein/'><img src='~/img/newfacebook.png'></a>
                        </li>
                        <li>
                            <a class='nav-link socialNetworks'
                               target="_blank" href='https://twitter.com/rsprachrohr'><img src='~/img/newtwitter.png'></a>
                        </li>
                        <li>
                            <a class='nav-link socialNetworks'
                               target="_blank" href='https://www.youtube.com/channel/UCYp3rk70ACGXQ4gFAiMr1SQ'><img src='~/img/newyoutube.png'></a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>
    </header>

    <article id="article" class="container-fluid" style="padding: 0;margin: 0">
        <div class="row justify-content-center">
            <div class="container" style="margin: 0; margin-top: 20px;">
                @* Заголовок страницы *@
                @await Html.PartialAsync("Shared/_heading")
                <div class="row justify-content-center">
                    @* Блок второстепенной информации *@
                    @await Html.PartialAsync("Shared/_aside")
                    <!--        Основная информация-->
                    <section class="col-lg-9 col-md-9 col-sm-12 col-12 order-sm-first  order-first ">
                        <!--            Декоративные линии-->
                        <div class="blockInfo" id="mainBlock">
                            <div>
                                @await Html.PartialAsync("Shared/_decorativeLines")
                            </div>
                            @RenderBody()
                        </div>
                    </section>
                </div>
            </div>
        </div>
        @RenderSection("Feedback", false)
    </article>

    <footer id="footer" style="padding: 0">
        <!--        Декоративные линии-->
        @await Html.PartialAsync("Shared/_decorativeLines")
        <div class="container-fluid" style="padding: 0;margin: 0">
            <div class="row justify-content-start">
                <div class="col-lg-2 col-md-5 col-sm-2 col-4">
                    <img class="card-img-left richard" src="~/img/richard.png">
                </div>
                <div class="col-lg-8 col-md-7 col-sm-5 col-8" style="padding:0;">
                    <div class="container-fluid">
                        <!--                    Авторские права-->
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-md-12 col-sm-12 col-12 text-center footer-font">
                                <div class="copyright">
                                    <h2>Авторские права</h2>
                                    <p>
                                        Вся информация представленная на сайте взята из
                                        открытых источников и является собственностью
                                        их авторов.
                                    </p>
                                </div>
                            </div>
                            <!--                    Контакты-->
                            <div class="col-lg-5 col-md-12 col-sm-12 col-12 ">
                                <div class="contacts">
                                    <h2>Контакты</h2>
                                    <p><img src="~/img/telephone-fill.svg" class="phone">89518994468</p>
                                    <p><img src="~/img/envelope-fill.svg"> RammsteinFan@gmail.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
