@page
@model RammsteinFan.Pages.AdminPages.AddContentModel
@{
    ViewData["Title"] = "Создать";
    ViewData["chapter"] = "Создать контент";
    Content newContent = new Content();
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-form-label" asp-for="@newContent.Title">Название контента</label>
                    <input type="text" class="form-control" asp-for="@newContent.Title"  />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="@newContent.Type">Тип контента</label>
                    <select class="form-control" asp-for="@newContent.Type" asp-items="@new SelectList(Model.Types)">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@newContent.Location" class="col-form-label">Расположение</label>
                    <select class="form-control" asp-for="@newContent.Location" asp-items="@new SelectList(Model.Locations)">
                    </select>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@newContent.CanChangeType" />
                    <label class="form-check-label" asp-for="@newContent.CanChangeType">
                        Разрешение на изменение типа и расположения
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@newContent.CanRemoved" />
                    <label class="form-check-label" asp-for="@newContent.CanRemoved">
                        Разрешение на удаление
                    </label>

                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="@newContent.Text">Текст</label>
                    <textarea rows="5" class="form-control" type="text" asp-for="@newContent.Text"></textarea>
                </div>
                <input class="btn btn-send" type="submit" value="Создать"/>
            </form>
        </div>
    </div>
</div>
